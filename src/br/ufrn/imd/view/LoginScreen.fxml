<AnchorPane prefHeight="335.0" prefWidth="325.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.ufrn.imd.controller.gui.LoginScreenController">
	<children>
		<Button fx:id="loginButton" layoutX="140.0" layoutY="233.0" mnemonicParsing="false" onAction="#onLoginButtonPressed" text="Login" />
		<TextField fx:id="usernameTextField" layoutX="118.0" layoutY="78.0" prefHeight="25.0" prefWidth="166.0" promptText="Username" />
		<Label fx:id="loginReturnLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="3.0" layoutY="30.0" prefHeight="37.0" prefWidth="319.0" textAlignment="CENTER" textFill="RED" />
		<Button fx:id="registerButton" layoutX="53.0" layoutY="258.0" mnemonicParsing="false" onAction="#onRegisterButtonPressed" style="-fx-background-color: transparent;" text="You don't have an account? Click here." textFill="#009bff">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
      <Label alignment="CENTER" contentDisplay="CENTER" layoutX="42.0" layoutY="82.0" prefHeight="17.0" prefWidth="72.0" text="USERNAME">
         <font>
            <Font name="Arial" size="12.0" />
         </font>
      </Label>
      <Label alignment="CENTER" contentDisplay="CENTER" layoutX="42.0" layoutY="153.0" prefHeight="17.0" prefWidth="72.0" text="PASSWORD">
         <font>
            <Font name="Arial" size="12.0" />
         </font>
      </Label>
      <PasswordField fx:id="passwordTextField" layoutX="118.0" layoutY="149.0" prefHeight="25.0" prefWidth="166.0" promptText="Password" />
	</children>
</AnchorPane>
